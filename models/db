const Sequelize = require('sequelize')

const sequelize = new Sequelize(
  'fiblo',
  process.env[process.env.NODE_ENV].DB_USERNAME,
  process.env[process.env.NODE_ENV].DB_PASSWORD,
  {
    host: process.env.NODE_ENV === 'production' ? '<DB SERVIDOR DO?>' : 'localhost',
    dialect: 'postgres',

    pool: {
      max: 5,
      min: 0,
      acquire: 30000,
      idle: 10000
    },

    // http://docs.sequelizejs.com/manual/tutorial/querying.html#operators
    operatorsAliases: false
  }
)

module.exports = sequelize
